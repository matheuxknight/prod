<?php

echo announcementRemove(trim($_REQUEST['num']));

function announcementRemove($num){
	$user = getUser();
    $a = explode(",",$user->announcement);
    for($i = 0; $i < count($a); $i++){
        if($a[$i] == $num)
            unset($a[$i]);
    }
	$a = implode(",", $a);
	$user->announcement = $a;
	$user->save();
}